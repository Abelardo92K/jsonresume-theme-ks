{{#ifHasEducation resume.education}}
  {{#isArray .}}
    <div class="container education-container">
      {{> title value="Education"}} 
      {{#each .}}
        {{#isEducation .}}
          <section class="item">
            {{#if studyType}}<h4>{{studyType}}</h4>{{/if}}
            {{#if institution}}<h4>{{institution}}</h4>{{/if}}

            <h4>(
              {{#if startDate}}
              <span class="startDate">{{formatYear startDate}}</span>
              {{#if endDate}}
              <span class="endDate"> - {{formatYear endDate}}</span>
              {{else}}
              <span class="endDate"> - Present</span>
              {{/if}}
              {{else if releaseDate}}
              {{formatDate releaseDate}}
              {{/if}}
            )</h4>
          </section>
        {{/isEducation}}
      {{/each}}
  </div>
  {{else}}
    {{{.}}}
  {{/isArray}}
{{/ifHasEducation}}
